<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".WebSiteActivity"
            android:exported="false"
            android:label="@string/About"/>
        <activity
            android:name=".WantToReadActivity"
            android:exported="false"
            android:label="@string/WantToReadBooks"/>
        <activity
            android:name=".CurrentlyReadingBookActivity"
            android:exported="false"
            android:label="@string/CurrentlyReadingBooks"/>
        <activity
            android:name=".FavoriteBookActivity"
            android:exported="false"
            android:label="@string/FavoriteBooks"/>
        <activity
            android:name=".AlreadyReadBookActivity"
            android:exported="false"
            android:label="@string/AlreadyReadBooks"/>
        <activity
            android:name=".BookActivity"
            android:exported="false" />
        <activity
            android:name=".AllBooksActivity"
            android:exported="false"
            android:label="@string/AllBooksActivity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>